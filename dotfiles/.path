# shellcheck shell=bash
# vim: ft=sh
# specific PATH environment variable setup

# get a common execution environment
[[ ! $MJS_COMMON_ENV ]] && . "$MJS_BASE/common.sh"

# add homebrew path if installed
if has_brew; then
  PATH=/usr/local/bin:$PATH
fi

# add user directory bin
PATH=$HOME/bin:$PATH

# rust toolchain
cargo="$HOME/.cargo/bin"
[[ -x "$cargo/cargo" ]] && PATH=$cargo:$PATH

# export
export PATH
