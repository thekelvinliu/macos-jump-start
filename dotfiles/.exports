# exports environment variables

# this repo!
export MJS_BASE="$HOME/macos-jump-start"

# terminal basics
export TERM=xterm-256color
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# colors
. "$MJS_BASE/dotfiles/.colors"

# hist
shopt -s histappend
export HISTCONTROL=ignoreboth
export HISTFILE="$HOME/.eternal_history"
export HISTFILESIZE=
export HISTSIZE=
export HISTTIMEFORMAT="[%F %T] "

# primary ssh key pair
export SSH_PRIVATE_KEY="$HOME/.ssh/id_ed25519"
export SSH_PUBLIC_KEY="$HOME/.ssh/id_ed25519.pub"

# editors
export VISUAL=vim
export EDITOR="$VISUAL"

# git email and username
GIT_EMAIL=$(git config --global user.email 2> /dev/null)
[[ -n "$GIT_EMAIL" ]] && export GIT_EMAIL || unset GIT_EMAIL
GIT_USERNAME=$(git config --global user.name 2> /dev/null)
[[ -n "$GIT_USERNAME" ]] && export GIT_USERNAME || unset GIT_USERNAME

# nvm
export NVM_DIR="$HOME/.nvm"

# make brew cask symlink apps to /Applications
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# set JAVA_HOME
export JAVA_HOME=$(/usr/libexec/java_home)
